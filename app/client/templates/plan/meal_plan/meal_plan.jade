template(name='MealPlan')
	.meal-plan(id="meal-plan-wrapper")
		.col-xs-12.calendar-wrapper.text-center
			each dayCheck
				ul.list-inline
					li.day-header(id='{{this.date}}' day-id='{{this.date}}' class="{{hoverId}}").col-xs-4.day
							span.day-text(aria-hidden='true')
								| !{this.day}
							span.badge.pull-right(aria-hidden='true')
								| {{badges}}
					li.recipes-header.col-xs-8(day-id='{{this.date}}')
						| {{badges}} Recipes
						i.fa.fa-plus-square.pull-right.add-recipe(aria-hidden='true')
					each recipesList
						.dropdown-recipes
							+RecipeItem