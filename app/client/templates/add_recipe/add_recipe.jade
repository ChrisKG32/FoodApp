template(name='AddRecipe')
	.add-recipe
		h3.text-center
			| Add a recipe
		form.recipe-form.col-xs-12(autocomplete='off')
			.image-upload.text-center
				img(src="meatballs.jpg").col-xs-6.col-xs-offset-3
				button.btn.btn-success
					| Upload Image
			.recipe-details.col-xs-12
				.form-group
					input.form-control(id="recipe-name" type="text" placeholder="Recipe name")
				.form-group
					select.form-control(id="recipe-category" placeholder="Category")
						each attributes.category.array
							option
								| !{this.name}
				.form-group
					select.form-control(id="recipe-difficulty" placeholder="Difficulty")
						each attributes.difficulty.array
							option
								!{this.name}
				.form-group
					input.form-control(id="recipe-yield" type="text" placeholder="Yield")
				.well.col-xs-12
					.col-xs-6
						each attributes.diets.array
							.checkbox
								label
									input(id="cb-!{this.value}" type="checkbox" value="")
									| !{this.name}
				.ingredients.col-xs-12
					ul.ingredient-list
						each numIngredients
							+IngredientItem
					.col-xs-6.remove-ingredient
						h4.btn.btn-default
							span.glyphicon.glyphicon-minus
							| Ingredient
					.col-xs-6.add-ingredient
						h4.btn.btn-default
							span.glyphicon.glyphicon-plus
							| Ingredient
							
				.col-xs-6.text-center
					button.btn.btn-default.cancel-recipe
						| Cancel
				.col-xs-6.text-center
					button.btn.btn-primary.pull-right.text-center.submit-recipe-btn
						| Submit Recipe